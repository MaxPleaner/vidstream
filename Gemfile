source "http://rubygems.org"

# Vidstream process dependencies

gem 'headless'               # A virtual X display
gem 'selenium-webdriver'     # A virtual Firefox browser
gem 'securerandom'           # A random string generator
gem 'sentence_interpreter'   # A sentence parsing gem I made

# Sinatra server dependencies

gem 'sinatra/base'           # webserver
gem 'sinatra-websocket'      # websockets
gem 'eventmachine'           # dependency of sinatra-websocket

# Shared dependencies

gem 'data_mapper'            # An ORM
gem 'byebug'                 # A debugger

